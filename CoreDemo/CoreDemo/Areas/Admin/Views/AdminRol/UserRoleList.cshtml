@using EntityLayer.Concrete
@model List<AppUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NameSurname</td>
            <td>@item.UserName</td>
            <td> <a href="/Admin/AdminRol/AssignRole/@item.Id" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
    }
</table>

<a href="/Admin/AdminRol/Index" class="btn btn-primary">Rol Listesine Dön</a>