@model Message2

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>Mesaj Detay Sayfası</h1>

@Html.Label("Blog ID")
@Html.TextBoxFor(x=>x.MessageID , new {@class="form-control",@readonly = true} )
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x=>x.Subject , new {@class="form-control",@readonly = true} )
<br />
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x=>x.MessageDetails ,20,3, new {@class="form-control",@readonly = true} )
<br />

<a class="btn btn-success" asp-controller="Message" asp-action="InBox">Mesajlara Dön</a>

